{
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm install && npm run sass-build"
  },
  "deploy": {
    "startCommand": "npm run prod-node-server",
    "healthcheckPath": "/",
    "healthcheckTimeout": 100,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
