    <script src="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.js"></script>
    <script>
        // Utility functions
        window.showSuccessNotification = function(message) {
            new Noty({
                type: 'success',
                text: message
            }).show();
        };

        window.showErrorNotification = function(message) {
            new Noty({
                type: 'error',
                text: message
            }).show();
        };
    </script>
